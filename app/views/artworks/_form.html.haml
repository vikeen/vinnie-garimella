=form_for(@artwork) do |f|
  -if @artwork.errors.any?
    #error_explanation
      %h2 #{pluralize(@artwork.errors.count, "error")} prohibited this artwork from being saved:

      %ul
      -@artwork.errors.full_messages.each do |msg|
        %li #{msg}

  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label 'Image'
    %br
    = f.file_field :attachment
  .field
    = f.label :description
    %br
    = f.text_field :description
  .field
    = f.label 'Type'
    %br
    = f.select :artwork_type_id, ArtworkType.all.collect {|at| [ at.name, at.id ] }
  .actions
    = f.submit 'Publish'
